<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.smsforwarder">
  <uses-permission android:name="android.permission.READ_SMS" />
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.INTERNET" />
  <application android:allowBackup="false" android:supportsRtl="true" android:label="@string/app_name">
    <activity android:name=".ConfigActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <service android:name=".ForegroundService" android:foregroundServiceType="connectedDevice|dataSync" />
  </application>
</manifest>
